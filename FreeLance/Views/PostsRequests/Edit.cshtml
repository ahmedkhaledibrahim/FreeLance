@model FreeLance.Models.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Approve</h2>

<div style="margin-left:60px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Post</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.Budget)
            @Html.HiddenFor(model => model.ClientID)
            @Html.HiddenFor(model => model.Description)
            @Html.HiddenFor(model => model.Date)
            @Html.HiddenFor(model => model.NumbrOfProposals)
            @Html.HiddenFor(model => model.Rate)
            @Html.HiddenFor(model => model.Remove)
            @Html.HiddenFor(model => model.Type)
            @Html.HiddenFor(model => model.User.UserName)



            <div class="form-group">
                @Html.LabelFor(model => model.Accept, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Accept)
                        @Html.ValidationMessageFor(model => model.Accept, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
