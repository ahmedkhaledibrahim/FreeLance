

@{
    ViewBag.Title = "F-Lancing";
    Layout = null;
}



@using System.Web.Optimization


<html>
<head>
    @Styles.Render("~/Content/css")
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Scripts/StartPage.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Start</title>
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
            type="text/javascript">
    </script>

    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
            type="text/javascript">
    </script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #1d232b;">
        <div class="container">
            <div class="navbar-header" style="margin-top:15px">
                <label style="color: white; font-size:medium">F-Lancing</label>
            </div>
            <div class="navbar-collapse collapse" style="position:relative; left:1000px">
                <ul class="nav navbar-nav">
                    <li>
                        <button id="btnShowModal" type="button" class="buttonLogin">
                            Login
                        </button>
                    </li>
                    <li>
                        <button id="btnShowModal2" type="button" class="buttonLogin">
                            Register
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>




    <div>
        @Html.Partial("_Login")
    </div>






    <div>
        @Html.Partial("_Register")
    </div>



    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <script type="text/javascript">

        $(document).on('click', function () {
            $("#btnShowModal").click(function () {
                $("#loginModal").modal('show');
            });

            $("#btnHideModal").click(function () {
                $("#loginModal").modal('hide');
            });


            $("#btnShowModal2").click(function () {
                $("#loginModal2").modal('show');
            });

            $("#btnHideModal2").click(function () {
                $("#loginModal2").modal('hide');
            });
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")

</body>

</html>