@using FreeLance.Models
@model Post
@{
    ViewBag.Title = "CreateNewPost";
    Layout = "~/Views/Shared/_FactoryLayout.cshtml";

}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript">
</script>
@Styles.Render("~/Content/css")

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript">
</script>



<h2>Create New Post</h2>
<div style="font-size:medium;width:500px;">
    @using (Html.BeginForm("Add", "Start", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        <div class="form-group">
            @Html.DisplayNameFor(model => model.Description)
            <div>
                @Html.EditorFor(model => model.Description)
            </div>

            <div class="alert-danger">
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(model => model.Type)
            <div>
                @Html.DropDownListFor(model => model.Type, new SelectList(Enum.GetValues(typeof(JopType))), "Select Job Type")
            </div>

            <div class="alert-danger">
                @Html.ValidationMessageFor(model => model.Type)
            </div>
        </div>


        <div class="form-group">
            @Html.DisplayNameFor(model => model.Budget)
            <div>
                @Html.EditorFor(model => model.Budget)
            </div>

            <div class="alert-danger">
                @Html.ValidationMessageFor(model => model.Budget)
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-primary button button4">Post</button>
        </div>

    }
</div>








