<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Scripts/StartPage.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Applicati</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @section scripts
{
        @Styles.Render("~/Content/css")
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
                type="text/javascript">
        </script>

        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
                type="text/javascript">
        </script>
        <script>
            var form = $("#loginModal2")
                .removeData("validator")
                .removeData("unobtrusiveValidation");

            $.validator.unobtrusive.parse(form);
        </script>

        @Scripts.Render("~/bundles/jqueryval")

    }
</head>


<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="margin-top:15px">
                <label style="color:white">F-Lancing</label>
            </div>
            <div class="navbar-collapse collapse" style="position:relative; left:1000px">
                <ul class="nav navbar-nav">
                    <li>
                        <button id="btnShowModal" type="button" class="buttonLogin">
                            Login
                        </button>
                    </li>
                    <li>
                        <button id="btnShowModal2" type="button" class="buttonLogin">
                            Register
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @Html.Partial("_Register")
        @Html.Partial("_Login")

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script src="bootstrap/js/bootstrap.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#loginModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });


        $("#btnShowModal2").click(function () {
            $("#loginModal2").modal('show');
        });

        $("#btnHideModal2").click(function () {
            $("#loginModal2").modal('hide');
        });
    });
</script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jqueryval")

