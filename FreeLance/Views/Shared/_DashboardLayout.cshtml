<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,intial scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap2.min.css" rel="stylesheet" />
</head>
<body>

    <!--Nav-->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark ">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item">
                @Html.ActionLink("Profile", "Index", "Profile", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Users’ page", "Index", "Users", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Posts page", "Index", "Posts", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Posts Requests", "Index", "PostsRequests", null, new { @class = "nav-link" })
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0 ">
            @Html.ActionLink("Logout", "ModalPopUp", "Start", null, new { @class = "btn text-danger my-2 my-sm-0" })
           
        </form>
    </nav>

    <div>
        @RenderBody()

    </div>
    <!--footer-->
    <!-- Footer -->
    <footer class=" fixed-bottom font-small bg-dark">
        <div class="footer-copyright text-center text-light">
            © 2021 Copyright:

        </div>
    </footer>
    <!-- Footer -->
    <!--js-->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
